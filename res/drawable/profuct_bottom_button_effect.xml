<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="24.0dip" />
            <solid android:color="@color/tpp_gradient_red_end" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="24.0dip" />
            <solid android:color="@color/main_btn_disabled_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24.0dip" />
            <gradient android:startColor="@color/tpp_gradient_red_start" android:endColor="@color/tpp_gradient_red_end" android:angle="0.0" />
        </shape>
    </item>
</selector>
